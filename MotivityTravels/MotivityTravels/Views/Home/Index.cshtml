@model MotivityTravels.Models.TravelDetails
@{
    ViewData["Title"] = "Home Page";
}
<h1>Motivity Travels</h1>
<form method="post"  asp-controller="Home" asp-action="VoiceRecord">
    <div class="col-md-6">
        <label>
            Use voice search or enter travel details
        </label>
        <button>
            <img src="/Images/mic.svg" />
        </button>
    </div>
</form>
