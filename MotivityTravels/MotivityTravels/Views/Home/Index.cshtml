<form class="row g-3" asp-action="PostTravelDetails">
    <div class="col-md-6">
        <label asp-for="FromSource" class="form-label"></label>
        <input asp-for="FromSource" class="form-control" />
        <span asp-validation-for="FromSource" class="text-danger"></span>
    </div>
    <div class="col-md-6">
        <label asp-for="ToDestination" class="form-label"></label>
        <input asp-for="ToDestination" class="form-control" />
        <span asp-validation-for="ToDestination" class="text-danger"></span>
    </div>
    <div class="col-md-6">
        <label asp-for="FromDate" class="form-label"></label>
        <input asp-for="FromDate" class="form-control" />
        <span asp-validation-for="FromDate" class="text-danger"></span>
    </div>
    <div class="col-md-6">
        <label asp-for="ToDate" class="form-label"></label>
        <input asp-for="ToDate" class="form-control" />
        <span asp-validation-for="ToDate" class="text-danger"></span>
    </div>
    <div class="col-md-6">
        <label asp-for="ParentsCount" class="form-label"></label>
        <input asp-for="ParentsCount" class="form-control" />
        <span asp-validation-for="ParentsCount" class="text-danger"></span>
    </div>
    <div class="col-md-6">
        <label asp-for="ChildernCount" class="form-label"></label>
        <input asp-for="ChildernCount" class="form-control" />
        <span asp-validation-for="ChildernCount" class="text-danger"></span>
    </div>
    <div class="col-12">
        <input type="submit" value="Submit" class="btn btn-primary" />
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
